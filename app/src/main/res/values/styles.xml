<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/darkRedMenu</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/darkRedMenu</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/ic_splash_screen</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat">
        <item name="android:textColorSecondary">@color/textForNav</item>
        <item name="android:tint">@color/textForNav</item>
        <item name="android:foregroundTint" tools:targetApi="lollipop">@color/textForNav</item>
    </style>

    <style name="AppTheme.AboutFragment" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/textForNav</item>
        <item name="android:textColorLink">@color/textForNav</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/darkRedMenu</item>
        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">@color/darkRedMenu</item>
        <item name="android:tint">@color/textForNav</item>
    </style>

</resources>
