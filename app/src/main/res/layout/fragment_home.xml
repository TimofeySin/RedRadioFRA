<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@drawable/home_fon_akustika">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="100dp"
            android:contentDescription="@string/rpr_logo"
            app:srcCompat="@drawable/rpw_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/generalTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/roboto"
                android:padding="@dimen/fab_margin"
                android:text="@string/nav_header_title"
                android:textAlignment="center"
                android:textColor="@color/textForNav"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/trackInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:ellipsize="marquee"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/textForNav"
                android:textSize="24sp" />
        </LinearLayout>
    </FrameLayout>

    <View
        android:id="@+id/viewBorder"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/borderHome" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:background="@drawable/fon_wood">

        <ImageView
            android:id="@+id/controlPlayerButtonShadow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/play_button"
            android:padding="@dimen/nav_header_vertical_spacing"
            app:srcCompat="@drawable/ic_play_button_shadow" />

        <ImageView
            android:id="@+id/controlPlayerButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/play_button"
            android:padding="@dimen/activity_horizontal_margin"
            app:srcCompat="@drawable/ic_play_button"
            tools:visibility="visible" />

    </FrameLayout>

</LinearLayout>